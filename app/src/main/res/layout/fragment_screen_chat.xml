<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextHint"
    android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:id="@+id/fragment_screen_chat_accounttitle"
        android:text="DucLinh"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <android.support.v7.widget.RecyclerView
        android:background="#ffffff"
        android:id="@+id/fragment_screen_chat_listmessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="10">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:paddingTop="2dp">
                <EditText
                    android:id="@+id/fragment_screen_chat_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Fill message !"
                    android:padding="5dp"
                    android:textSize="12sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/fragment_screen_chat_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Send"
                android:textSize="10sp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>